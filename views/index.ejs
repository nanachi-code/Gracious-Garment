<%- include('header');%>

<section class="slider">
    <div class="container-fluid">
        <div class="homepage-big-picture">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block" src="assets/images/banner/banner1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="assets/images/banner/banner2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="assets/images/banner/banner3.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- introduction start -->
<section class="introduction my-4">
    <div class="container">
        <h2 class="text-center py-4 text-uppercase">
            Why Choose <span class="text-secondary">Gracious Garment</span>
        </h2>

        <div class="row py-4">
            <div class="col-md-6 col-lg-4">
                <div class="p-4 bg-light">
                    <div class="text-center text-70 mb-4">
                        <i class="fas fa-tshirt"></i>
                    </div>
                    <h4 class="text-center mb-4 text-uppercase">Shopping options</h4>
                    <p class="text-center">We have more than 1,000 products
                        from all famous and unique brands worldwide.
                        Products we cater to all ages. Free for you to choose.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="p-4 bg-light">
                    <div class="text-center text-70 mb-4">
                        <i class="fas fa-money-check-alt"></i>
                    </div>
                    <h4 class="text-center mb-4">YOUR  BEST  DEAL</h4>
                    <p class="text-center">We are pleased to serve you
                        the best products at good prices, with items
                        that are current fashion trends and the coming years.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="p-4 bg-light">
                    <div class="text-center text-70 mb-4">
                        <i class="far fa-lightbulb"></i>
                    </div>
                    <h4 class="text-center mb-4">BUILD YOUR STYLE</h4>
                    <p class="text-center">Our partners develop unique and trendy designs.
                        Buy today for a 10% discount and free
                        delivery less than 20 km around the store.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- introduction end -->

<!-- brand start -->

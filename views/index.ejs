                    <img src="assets/images/brand/Chanel_logo.png">
                </a>
            </div>
            <div class="col-2 d-flex align-self-center justify-content-center">
                <a href="/brand/nike">
                    <img src="assets/images/brand/Logo_NIKE.png">
                </a>
            </div>
            <div class="col-2 d-flex align-self-center justify-content-center">
                <a href="/brand/gucci">
                    <img src="assets/images/brand/gucci-Logo.png">
                </a>
            </div>
            <div class="col-2 d-flex align-self-center justify-content-center">
                <a href="/brand/hermes">
                    <img src="assets/images/brand/HermÃ¨s.png">
                </a>
            </div>
            <div class="col-2 d-flex align-self-center justify-content-center">
                <a href="/brand/louis-vuiton">
                    <img src="assets/images/brand/Louis-Vuitton.png">
                </a>
            </div>
        </div>
    </div>
</section>
<!-- brand end -->

<!-- latest product start -->
<section class="latest my-4">
    <div class="container">
        <h2 class="text-center py-4 text-uppercase">
            Latest <span class="text-secondary">Products</span>
        </h2>
        <!-- carousel start -->
        <div class="py-4 latest-slider">
            <% latestProduct.forEach(element => { %>
            <!-- category product start -->
            <div class="category-product px-2">
                <!-- product img start-->
                <div class="category-product-img">
                    <a href="/product/<%= element.productPermalink %>">
                        <img src="<%= element.productImg %>" alt="" srcset="">
                    </a>
                </div>
                <!-- product img end-->

                <!-- product title start -->
                <div class="category-product-title">
                    <!-- clearfix start -->
                    <div class="clearfix">
                        <!-- float left start -->
                        <div class="float-left">
                            <h6 class="text-white text-bold">
                                <a href="/product/<%= element.productPermalink %>"
                                    class="text-white"><%= element.productName %></a><br>
                                by <a href="/brand/<%= element.productBrandPermalink %>"
                                    class="brand"><%= element.productBrand %></a>
                            </h6>
                        </div>
                        <!-- float left end -->

                        <!-- float right start -->
                        <div class="float-right">
                            <h3 class="category-product-price text-white price-tag">$<%= element.productPrice %></h3>
                        </div>
                        <!-- float right end -->
                    </div>
                    <!-- clearfix end -->
                </div>
                <!-- product title end -->
            </div>
            <!-- category product end -->
            <% }); %>
        </div>
        <!-- carousel end -->
    </div>
</section>
<!-- latest product end -->

<%- include('footer');%>
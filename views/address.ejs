<%- include('header') %>

<section class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-3 pr-0">
                <h4 class="border-bottom border-3 border-light text-center py-2 text-secondary">
                    1. SHOPPING CART
                </h4>
            </div>
            <div class="col-md-3 px-0">
                <h4 class="border-bottom border-3 border-dark text-center text-bold py-2">
                    2. DELIVERY ADDRESS
                </h4>
            </div>
            <div class="col-md-4 px-0">
                <h4 class="border-bottom border-3 border-light text-center py-2 text-secondary">
                    3. SHIPPING & PAYMENT
                </h4>
            </div>
            <div class="col-md-2 pl-0">
                <h4 class="border-bottom border-3 border-light text-center py-2 text-secondary">
                    4. SUMMARY
                </h4>
            </div>
        </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="pt-2 pb-2 mb-4 text-18 text-bold align-self-center">Billing info</div>
                    <div class="form-group row">
                        <label for="billingName" class="col-md-4 text-uppercase">Name</label>
                        <input type="text" class="form-control col-md-6" id="billingName" name="billingName"
                               required>
                    </div>

                    <div class="form-group row">
                        <label for="billingAddress" class="col-md-4 text-uppercase">Address</label>
                        <input type="text" class="form-control col-md-6" id="billingAddress" name="billingAddress"
                               required>
                    </div>
                    <div class="form-group row">
                        <label for="billingPhone" class="col-md-4 text-uppercase">Phone</label>
                        <input type="tel" class="form-control col-md-6" id="billingPhone" name="billingPhone"
                               required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row pt-2 pb-2 mb-4">
                        <div class="col-md-4 offset-md-2 p-0 text-18 text-bold align-self-center">Delivery info
                        </div>
                        <div class="col-md-6 align-self-center mb-0">
                            <div class="form-check text-right">
                                <input type="checkbox" id="copyInfo" class="form-check-input" name="copyInfo">
                                <label for="copyInfo" class="form-check-label">Same as billing info</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row mr-0">
                        <label for="deliveryName" class="offset-md-2 col-md-4 px-0 text-uppercase">Name</label>
                        <input type="text" class="form-control col-md-6" id="deliveryName" name="deliveryName"
                               required>
                    </div>

                    <div class="form-group row mr-0">
                        <label for="deliveryAddress"
                               class="offset-md-2 col-md-4 px-0 text-uppercase">Address</label>
                        <input type="text" class="form-control col-md-6" id="deliveryAddress" name="deliveryAddress"
                               required>
                    </div>

                    <div class="form-group row mr-0">
                        <label for="deliveryPhone" class="offset-md-2 col-md-4 px-0 text-uppercase">Phone</label>
                        <input type="tel" class="form-control col-md-6" id="deliveryPhone" name="deliveryPhone"
                               required>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="comment">ORDER COMMENT</label>
                <textarea class="form-control" rows="5" id="comment"></textarea>
            </div>
            <div class="row button">
                <div class="col-md-6">
                    <a href="/cart" class="text-uppercase btn btn-dark text-12 text-bold px-4">Back to cart</a>
                </div>
                <div class="col-md-6 text-right">
                    <a href="/shipping-payment" id="address-redirect"
                            class="btn btn-warning text-white px-4 text-12 text-bold text-uppercase">Process to
                        payment</a>
                </div>
            </div>

    </div>
</section>

<%- include('footer') %>